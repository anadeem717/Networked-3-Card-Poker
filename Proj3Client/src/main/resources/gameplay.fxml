<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.text.Text?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="GameplayController">
    <center>
        <VBox spacing="20" alignment="CENTER" maxWidth="600">
            <!-- Winnings display -->
            <HBox alignment="CENTER" spacing="10">
                <Label text="Winnings: " />
                <Label fx:id="winningsLabel"
                       text="'$0'"
                       style="-fx-font-size: 18px; -fx-text-fill: blue;" />
            </HBox>

            <!-- Player cards display -->
            <VBox alignment="CENTER" spacing="10">
                <Label text="Player Cards" style="-fx-font-weight: bold;"/>
                <HBox fx:id="playerCardsBox"
                      alignment="CENTER"
                      spacing="10"
                      style="-fx-border-color: blue; -fx-border-width: 2px; -fx-padding: 10px;">
                    <!-- Card placeholders will be added dynamically -->
                </HBox>
            </VBox>

            <!-- Dealer cards display -->
            <VBox alignment="CENTER" spacing="10">
                <Label text="Dealer Cards" style="-fx-font-weight: bold;"/>
                <HBox fx:id="dealerCardsBox"
                      alignment="CENTER"
                      spacing="10"
                      style="-fx-border-color: red; -fx-border-width: 2px; -fx-padding: 10px;">
                    <!-- Card placeholders will be added dynamically -->
                </HBox>
            </VBox>

            <!-- Bet options -->
            <VBox spacing="10" alignment="CENTER">
                <Label text="Betting Options" style="-fx-font-weight: bold;"/>
                <HBox spacing="10" alignment="CENTER">
                    <Button fx:id="anteButton"
                            text="Ante"
                            onAction="#placeAnte"
                            styleClass="bet-button"/>
                    <Button fx:id="pairPlusButton"
                            text="Pair Plus"
                            onAction="#placePairPlus"
                            styleClass="bet-button"/>
                    <Button fx:id="playButton"
                            text="Play"
                            onAction="#playGame"
                            styleClass="bet-button"/>
                </HBox>
            </VBox>

            <!-- Game information display -->
            <Text fx:id="gameInfoText"
                  text="Game info will appear here"
                  style="-fx-background-color: lightgray;
                         -fx-padding: 10px;
                         -fx-font-size: 14px;
                         -fx-text-fill: black;"/>
        </VBox>
    </center>
</BorderPane>